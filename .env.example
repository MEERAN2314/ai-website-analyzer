# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME="AI Website Analyzer"
APP_VERSION="2.0.0"
ENVIRONMENT="development"  # Options: development, production, staging
DEBUG=True  # Set to False in production
SECRET_KEY="your-secret-key-change-this-in-production-use-strong-random-string"
API_V1_PREFIX="/api/v1"

# ============================================
# SERVER CONFIGURATION
# ============================================
HOST="0.0.0.0"
PORT=8000
RELOAD=True  # Set to False in production

# ============================================
# DATABASE - MONGODB ATLAS (REQUIRED)
# ============================================
# Get your MongoDB connection string from: https://cloud.mongodb.com/
# Format: mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_URL="mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority"
MONGODB_DB_NAME="website_analyzer"

# ============================================
# REDIS CONFIGURATION (REQUIRED)
# ============================================
# For local development: redis://localhost:6379/0
# For Docker: redis://redis:6379/0
# For production: Use managed Redis service
REDIS_HOST="localhost"  # Use "redis" when running with docker-compose
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""  # Set a strong password in production
REDIS_URL="redis://localhost:6379/0"

# ============================================
# JWT AUTHENTICATION (REQUIRED)
# ============================================
# Generate strong random keys using: openssl rand -hex 32
JWT_SECRET_KEY="your-jwt-secret-key-change-this-to-random-string"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# GOOGLE GEMINI API (REQUIRED)
# ============================================
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY="your-gemini-api-key-here"
GEMINI_MODEL="gemini-2.0-flash-exp"  # Options: gemini-pro, gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=8192

# ============================================
# GOOGLE DRIVE API (OPTIONAL - for PDF storage)
# ============================================
# If not configured, PDFs will be stored locally in app/static/pdfs/
# Get credentials from: https://console.cloud.google.com/
GOOGLE_DRIVE_CREDENTIALS_FILE="service-account-key.json"
GOOGLE_DRIVE_FOLDER_ID="your-drive-folder-id"

# ============================================
# SUBSCRIPTION & RATE LIMITING
# ============================================
# Analysis limits per plan (per 24 hours)
RATE_LIMIT_FREE_USER=1
RATE_LIMIT_BASIC_USER=10
RATE_LIMIT_PRO_USER=100
RATE_LIMIT_ENTERPRISE_USER=1000
RATE_LIMIT_WINDOW_HOURS=24

# ============================================
# ANALYSIS SETTINGS
# ============================================
MAX_ANALYSIS_TIME_SECONDS=300
SCREENSHOT_WIDTH=1920
SCREENSHOT_HEIGHT=1080
LIGHTHOUSE_TIMEOUT=60

# ============================================
# EMAIL CONFIGURATION (OPTIONAL)
# ============================================
# For Gmail: Enable 2FA and create App Password
# https://support.google.com/accounts/answer/185833
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
EMAIL_FROM="noreply@websiteanalyzer.com"

# ============================================
# CELERY CONFIGURATION (OPTIONAL)
# ============================================
# Only needed if using background task processing
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# ============================================
# CORS SETTINGS
# ============================================
# Add your frontend URLs here
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://127.0.0.1:8000"]

# ============================================
# FILE UPLOAD & STORAGE
# ============================================
MAX_UPLOAD_SIZE_MB=10

# ============================================
# FRONTEND URLS
# ============================================
FRONTEND_URL="http://localhost:8000"

# ============================================
# LOGGING
# ============================================
LOG_LEVEL="INFO"  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================
# SECURITY (PRODUCTION ONLY)
# ============================================
# Uncomment and configure for production deployment
# ALLOWED_HOSTS=["yourdomain.com","www.yourdomain.com"]
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
